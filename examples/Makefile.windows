###
###	@configure_input@
###

.SUFFIXES:	.ml .mli .cmx .cmi .cmo .cmxa .cma .c .obj

OCBYTE=ocamlc
OCOPT=ocamlopt

OC=ocamlc
CC=ocamlc

FLAGS=-I ..
LFLAGS=-I ..

OCURLLIB=-dllpath .. unix.cma curl.cma
OCURLOPTLIB=unix.cmxa curl.cmxa

TARGETS=ocurl.exe ocurl.opt.exe oput.exe oput.opt.exe ominimal.exe ominimal.opt.exe ossl.exe ossl.opt.exe test_cb_exn.exe # omulti.exe omulti.opt.exe

all:
		@$(MAKE) -f Makefile.windows depend
		@$(MAKE) -f Makefile.windows targets

targets:	$(TARGETS)

%.exe: %.cmo
		$(OCBYTE) $(LFLAGS) $(OCURLLIB) $< -o $@

%.opt.exe: %.cmx
		$(OCOPT) $(LFLAGS) $(OCURLOPTLIB) $< -o $@

.ml.cmx:
		$(OCOPT) -c $(FLAGS) $< -o $@

.mli.cmi:
		$(OCBYTE) -c $(FLAGS) $< -o $@

.ml.cmo:
		$(OCBYTE) -c $(FLAGS) $< -o $@

clean:
		@del $(TARGETS) *~ *.cm* *.o *.a *.obj *.lib .depend core

depend:
		@ocamldep *.mli *.ml > .depend

ifeq ($(wildcard .depend),.depend)
ifneq ($(MAKECMDGOALS),clean)
include .depend
endif
endif
